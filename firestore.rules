rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isGoogleUser() {
      return request.auth != null
        && request.auth.token.firebase.sign_in_provider == 'google.com';
    }

    function isWriter() {
      return isGoogleUser()
        && exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email));
    }

    match /recipes/{recipeId} {
      allow read: if isGoogleUser();
      allow create, update, delete: if isWriter();
    }

    // Klientské aplikace nesmí číst ani listovat whitelist uživatelů.
    // Kolekce slouží pouze pro interní kontrolu v pravidlech přes exists(...).
    match /authorizedUsers/{email} {
      allow read, write: if false;
    }
  }
}
